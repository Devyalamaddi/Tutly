---
import RootLayout from "@layouts/RootLayout.astro";
const courseId = Astro.params.id;
return Astro.redirect(`/courses/${courseId}/`);
---

<RootLayout title="Redirecting...">
  <div class="flex h-screen flex-col items-center justify-center">
    <div class="text-center">
      <h1 class="text-4xl font-bold">Redirecting...</h1>
      <p class="text-xl">
        If you are not redirected automatically, please click <a href={`/courses/${courseId}/`}
          >here</a
        >.
      </p>
    </div>
  </div>
</RootLayout>
